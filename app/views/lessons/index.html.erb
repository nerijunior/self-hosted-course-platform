<p style="color: green"><%= notice %></p>

<% content_for :title, "Lessons" %>

<h1>Lessons</h1>

<div id="lessons">
  <% @lessons.each do |lesson| %>
    <%= render lesson %>
    <p>
      <%= link_to "Show this lesson", [@course, @unit, lesson] %>
    </p>
  <% end %>
</div>

<%= link_to "New lesson", new_course_unit_lesson_path(@course, @unit) %>
